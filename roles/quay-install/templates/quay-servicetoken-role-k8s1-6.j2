apiVersion: rbac.authorization.k8s.io/v1beta1
kind: Role
metadata:
  name: {{QUAY_SERVICE_ACCOUNT}}
  namespace: {{QUAY_NAMESPACE}}
rules:
  - apiGroups:
      - ""
    resources:
      - secrets
    verbs:
      - get
      - put
      - patch
      - update
  - apiGroups:
      - ""
    resources:
      - namespaces
    verbs:
      - get
  - apiGroups:
      - extensions
      - apps
    resources:
      - deployments
    verbs:
      - get
      - list
      - patch
      - update
      - watch
